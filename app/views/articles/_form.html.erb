<%= render 'shared/errors', obj: @article%>
<%= form_for @article do |f| %>
<div class="row mb-3">
    <div class="col-sm-2 col-form-label-lg">
        <%= f.label :title %>
    </div>
    <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of the Article" %>
    </div>
</div>
<div class="row mb-3">
    <div class="col-sm-2 col-form-label-lg">
        <%= f.label :description %>
    </div>
    <div class="col-sm-10">
        <%= f.text_area :description, rows: 8, class: "form-control", placeholder: "Description of the Article" %>
    </div>
</div>
<div class="col-md-12 text-center">
    <%= f.submit class: "btn btn-primary" %>
</div>
<% end %>
<div class="mt-3 col-md-12 text-center">
    <%= link_to 'view all articles', articles_path,class: "btn btn-dark"  %>
</div>