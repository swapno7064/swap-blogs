<h2 align="center" class="mt-3">Title:
    <%= @article.title %>
</h2>
<div class="card ">
    <% if @article.user %>
    <div class="card-body">
        <ul class="listing" align="center">
            <div class="col-md-4 offset-md-4">
                <li>Created by: </li>
                <li>
                    <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
                </li>
                <li class="article-title">
                    <%= link_to @article.user.username, user_path(@article.user) %>
                </li>
                <li>
                    <small>
                        <%= pluralize(@article.user.articles.count,"article") if @article.user.articles %>
                    </small>
                </li>
            </div>
        </ul>
    </div>
    <% end %>
    <div class="card-body">
        <div class="card-title center"><strong>Description: </strong>
        </div>
        <div class="card-text center">
            <%= @article.description %>
        </div>
        <div class="article-actions mt-4">
            <% if logged_in? && current_user == @article.user %>
            <%= link_to 'Edit this article', edit_article_path(@article), class: "btn btn-primary btn-sm" %>
            <%= link_to 'Delete this article', article_path(@article), method: :delete, data:{confirm: "Are you sure you want to delete this article?"}, class: "btn btn-danger btn-sm" %>
            <% end %>
            <%= link_to 'view all articles', articles_path, class: "btn btn-success btn-sm" %>
        </div>
    </div>
</div>