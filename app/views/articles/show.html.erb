<h2 align="center" class="mt-3">Title:
    <%= @article.title %>
</h2>
<div class="card ">
    <div class="card-body">
        <div class="card-title center"><strong>Description: </strong>
        </div>
        <div class="card-text center">
            <%= @article.description %>
        </div>
        <div class="article-actions mt-4">
            <%= link_to 'Edit this article', edit_article_path(@article), class: "btn btn-primary" %>
            <%= link_to 'Delete this article', edit_article_path(@article), method: :delete, data:{confirm: "Are you sure you want to delete this article?"}, class: "btn btn-danger" %>
            <%= link_to 'view all articles', articles_path, class: "btn btn-success" %>
        </div>
    </div>
</div>