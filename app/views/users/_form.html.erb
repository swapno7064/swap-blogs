<%= render 'shared/errors', obj: @user%>
<%= form_for @user do |f| %>
<div class="row mb-3">
    <div class="col-sm-2 col-form-label-lg">
        <%= f.label :username %>
    </div>
    <div class="col-sm-10">
        <%= f.text_field :username, class: "form-control", placeholder: "Enter username" %>
    </div>
</div>
<div class="row mb-3">
    <div class="col-sm-2 col-form-label-lg">
        <%= f.label :email %>
    </div>
    <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control", placeholder: "enter email" %>
    </div>
</div>
<div class="row mb-3">
    <div class="col-sm-2 col-form-label-lg">
        <%= f.label :password %>
    </div>
    <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control", placeholder: "enter password" %>
    </div>
</div>
<div class="col-md-12 text-center">
    <%= f.submit(@user.new_record? ? "Sign up":"Update Account", class: "btn btn-primary")%>
</div>
<% end %>
<div class="mt-3 col-md-12 text-center">
    <%= link_to 'view all articles', articles_path,class: "btn btn-dark"  %>
</div>