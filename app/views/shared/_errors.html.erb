<% if obj.errors.any? %>
<div class="card danger alert-danger mb-5">
    <div class="card-body">
        <h3 class="card-title">
            <%= pluralize(obj.errors.count,"error")%> prohibited this article from being saved:
        </h3>
        <div class="card-text">
            <ul>
                <% obj.errors.full_messages.each do |msg| %>
                <li>
                    <%= msg%>
                </li>
                <% end %>
            </ul>
        </div>
    </div>
</div>
<% end %>